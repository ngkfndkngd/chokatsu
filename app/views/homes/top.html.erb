<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <div class="homes_top mt-4">
        <p>Let's chokatsu</p>
      </div>
    </div>
   </div>
     
  <h4 class="my-1 ">新着レシピ</h4>
    <div class="card-list-row py-5">
      <% @recipes.each do |recipe| %>
        <div class="card w-50 mx-auto mt-4 ">
          <%= link_to recipe_path(recipe) do%>
           <%= attachment_image_tag recipe, :recipe_image, class:"card-img-top"; %><br>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= attachment_image_tag recipe, :recipe_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to recipe_path(recipe), class:"text-dark") do %>
                    <span> <%= recipe.name %></span>
                  <% end %>
                </p>
                <p class="card-text">
                　<span><i class="fas fa-user"></i> By <%= recipe.user.name %></span>
                </p>
            　</div>
          　</div>
        　</div>
      　</div>
    　<% end %>
    </div>
  