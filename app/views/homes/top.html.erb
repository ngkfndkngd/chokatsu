<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <div class="homes_top mt-4">
      </div>
    </div>
   </div>
    <div class="texts-wrapper">
      <div class="contents-title text-center">
        <h4 class="my-1 ">新着レシピ</h4>
            <div class="row">
              <div class="col-12">
                <div class="card-deck">
                <% @recipes.each do |recipe| %>
                <div class="col-3">
                  <div class="card h-100">
                    <%= link_to recipe_path(recipe) do %>
                      <%= attachment_image_tag recipe, :recipe_image, :fill, 300, 300, class:"card-img-top"; %><br>
                    <% end %>
                    <div class="card-body">
                      <div class="row">
                        <div class="col-2">
                          <%= attachment_image_tag recipe.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                        </div>
                        <div class="col-10">
                          <p class="card-title">
                            <%= link_to recipe_path(recipe), class:"text-dark" do %>
                              <span> <%= recipe.name %></span>
                            <% end %>
                          </p>
                          <p class="card-text">
                              <span><i class="fas fa-user"></i> By <%= recipe.user.name %></span>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
      </div>
    </div>
</div>