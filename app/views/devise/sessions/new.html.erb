<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="title my-3 ">ログイン</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="btn-wrapper col-12 mx-auto">
            <div class="row">
              <div class="field form-group row">
                <div class="col-2"><i class="fas fa-envelope"></i></div><br />
                  <%= f.email_field :email, autofocus: true, class:"far fa-envelope" %>
              </div>
            </div>
            <div class="row">
              <div class="field form-group row">
                <div class="col-2"><i class="fas fa-unlock-alt"></i></div><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: "col-9 form-control", placeholder:"パスワード(6文字以上)" %>
              </div>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="row mt-4">
              <div class="col-4"></div>
                <%= f.submit "ログイン" %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
    <div class="row mt-5 offset-8">
      <h6>登録がお済みではない方</h6>
        <p class="offset-3"><%= link_to "こちら", new_user_registration_path %>から新規登録してください。</p>
    </div>
  </div>
</div>