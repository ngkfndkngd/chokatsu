<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="title my-3 ">新規登録</h2>
          <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="btn-wrapper col-12 mx-auto">
                <div class="row">
                  <div class="field form-group row">
                    <div class="col-2"><i class="fas fa-user"></i></div><br />
                    <%= f.text_field :name, autofocus: true, class:"fas fa-user" %>
                  </div>
                </div>
                <div class="row">
                  <div class="field form-group row">
                    <div class="col-2"><i class="fas fa-envelope"></i></div><br />
                    <%= f.email_field :email, autofocus: true, class:"far fa-envelope" %>
                  </div>
                </div>
                <div class="row">
                  <div class="field form-group row">
                    <div class="col-2"><i class="fas fa-unlock-alt"></i></div><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "col-9 form-control", placeholder:"パスワード(6文字以上)" %>
                  </div>
                </div>
                <div class="row">
                  <div class="field form-group row">
                    <div class="col-2"><i class="fas fa-unlock-alt"></i></div><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-9 form-control", placeholder:"パスワード(確認用)" %>
                  </div>
                </div>
                <div class="row mt-4">
                  <div class="col-4"></div>
                    <%= f.submit "登録" %>
                  </div>
                </div>
              </div>
          <% end %>
    </div>
    <div class="row mt-5 offset-8">
      <h6>既に登録済みの方</h6>
        <p class="mt-3"><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>
