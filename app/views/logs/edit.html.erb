<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="col-lg-4 offset-lg-4 text-center my-4">
      <h3 class="log-taitl">カレンダー</h3>
      </div>
        <div class="text-center my-5">
          <h4><strong>今日の腸の状態は？</strong></h4>
        </div>
        <div class="form-group text-center my-4">
          <%= form_with model:@log, url:log_path, method: :patch, local:true do |f| %>
            <div class="btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-warning active mx-3 my-2">
                <%= f.radio_button :record_status, :fine, {checked: true} %>
                <%= image_tag 'logs0.png', size: "110x100"%>
                <%= f.label :すっきり %>
              </label>
              <label class="btn btn-secondary active mx-3 my-2">
                <%= f.radio_button :record_status, :low , {} %>
                <%= image_tag 'logs1.png', size: "110x100"%>
                <%= f.label :もやもや %>
              </label>
              <label class="btn btn-primary active mx-3 my-2">
                <%= f.radio_button :record_status, :sick, {} %>
                <%= image_tag 'logs2.png', size: "110x100"%>
                <%= f.label :さらさら %>
              </label></br>      
                <%= f.label :日時, class: "time_date my-3" %>
                <%= f.datetime_select :start_time %></br>
                
                <%= f.submit "登録", class: 'btn btn-outline-secondary col-3' %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
