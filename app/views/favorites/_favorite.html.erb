<% if @recipe.favorited_by?(current_user) %>
  <p><i class="fas fa-heart"></i>
  <%= link_to "レシピ保存済", recipe_favorite_path(@recipe), method: :delete, remote: true %>
  </p>
<% else %>
  <p><i class="far fa-heart"></i>
  <%= link_to "レシピ保存", recipe_favorites_path(@recipe), method: :post, remote: true %>
  </p>
<% end %>

