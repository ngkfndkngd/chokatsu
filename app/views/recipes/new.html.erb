<div class='container'>
  <div class="row">
    <div class="col-12">
      <h2>レシピ投稿</h2>
        <%= form_with model:@recipe, url:recipes_path, local:true do |f| %>
          <div class="col-12">
            <div class="form-group col-6">
              <%= f.label :レシピ画像, class: "col-3" %>
              <%= f.attachment_field :recipe_image %>
            </div>
            <div class="row form-group col-6">
              <%= f.label :レシピ名, class: "col-3" %>
              <%= f.text_field :name, placeholder:"レシピ名", class: 'col-6 form-control' %>
            </div>
            <div class="row form-group col-6">
              <%= f.label :◯人分, class: "col-3" %>
              <%= f.text_field :count, placeholder:"2人分", class: 'col-6 form-control' %>
            </div>

            <div class="row form-group col-6">
              <%= f.label :材料, class: "col-3" %>
              <%= f.text_field :materials_ingredient, placeholder:"材料", class: 'col-6 form-control' %>
            </div>

            <div class="row form-group col-6">
              <%= f.label :分量, class: "col-3" %>
              <%= f.text_field :materials_amount, placeholder:"分量", class: 'col-6 form-control' %>
            </div>

            <div class="row form-group">
              <%= f.label :作り方, class: "col-3" %>
              <%= f.text_area :description, placeholder:"ここに説明文を記述します", class: 'col-6 form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit "レシピ登録", class: 'btn btn_success btn-lg offset-5' %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>