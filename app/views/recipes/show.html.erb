<div class="container">
  <div class="row">
    <div class="col-4 offset-1">
      <h4 class="recipe_name"><%= @recipe.name %></h4>
      <div class="recipe_image">
          <%= attachment_image_tag(@recipe, :recipe_image,:fill, 300, 300) %>
      </div>
    </div>
        <div class="col-4 offset-1">
          <p class="name">
           <span><i class="fas fa-user"></i><%= @recipe.user.name %></span>
          </p>
          <% if @recipe.favorited_by?(current_user) %>
            <p><%= link_to "レシピ保存済", recipe_favorites_path(@recipe), method: :delete %></p>
          <% else %>
            <p><%= link_to "レシピ保存", recipe_favorites_path(@recipe), method: :post %></p>
          <% end %>
          <p>投稿日時：<%= @recipe.created_at.strftime('%Y/%m/%d') %></p>
          <h6 class="title">レシピ説明</h6>
          <p><%= @recipe.work %></p>
          <h4 class="title">
            材料(<%= @recipe.count %>人分)
          </h4>
          <p class"list">
            <%@recipe.materials.each do |m|%>
              <strong><%= m.ingredient %></strong><small><%= m.amount %></small>
            <%end%>
          </p>
        </div>
  </div>
  <div class="row">
    <div class="col-7 offset-5">
      <h4>作り方</h4>
        <p class="list">
          <%= @recipe.description %>
        </p>
        <% if user_signed_in? %>
          <% if current_user.id != @recipe.user.id %>
          <% else %>
            <div class="recipe-btn">
              <%= link_to "レシピ編集", edit_recipe_path(@recipe.id), class: "btn btn-warning recipe-edit" %>
              <%= link_to "レシピ削除", recipe_path(@recipe.id), method:  :delete,data: {confirm: "本当に削除しますか？"}, class:  "btn btn-danger" %>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
  <div class="row my-5">
    <div class="col-10 offset-1">
      <% if @reviews %>
        <div class="recipes-reviews">
          <%= render "reviews/review" %>
        </div>
      <% else %>
        <p>コメントはまだありません</p>
      <% end %>
      <div class="recipes-reviews">
        <%= form_with(model: [@recipe, @review], id: "new-review") do |f| %>
          <%= f.attachment_field :review_image, class: "imag-review" %>
          <%= f.text_field :comment, class: "input-review" %>
          <%= f.submit "コメントする", class: "submit-review" %>
        <% end %>
      </div>
    </div>
  </div>
</div>