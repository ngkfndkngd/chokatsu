<div class="container">
  <div class="row mt-5">
    <div class="col-12">
      <div class="texts-wrapper">
        <div class="contents-title text-center">
          <h3 class="ribbon1">レシピ一覧</h3>
            <div class="d-flex flex-row flex-wrap">
              <% @recipes.each do |recipe| %>
                <div class="d-flex flex-column mr-5 mt-3">
                    <%= link_to recipe_path(recipe.id) do %>
                      <%= attachment_image_tag(recipe, :recipe_image,:fill, 130, 130) %>
                    <% end %>
                     <p class="name">
                      <%= link_to recipe_path(recipe), class:"text-dark" do %>
                        <span> <%= recipe.name %></span>
                      <% end %>
                    </p>
                    <%= attachment_image_tag recipe.user, :profile_image,:fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                    <p class="name">
                      <span><i class="fas fa-user"></i> By <%= recipe.user.name %></span>
                    </p>
                </div>
              <% end %>
            </div>
            <div class="m-5">
              <%= paginate @recipes %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>