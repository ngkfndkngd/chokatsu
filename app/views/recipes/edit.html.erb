<div class='container'>
  <div class="row">
    <div class="col-12">
      <h2 class="row offset-lg-5 offset-2 my-5">レシピ投稿編集</h2>
        <%= form_with model:@recipe, url:recipe_path, local:true do |f| %>
          <div class="row form-group col-lg-8 col-12 offset-lg-2 offset-1">
            <div class="check_box">
              <span>タグ</span>
                <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
                  <%= tag.label do %>
                    <%= tag.check_box %>
                    <%= tag.text %>
                  <% end %>
                <% end %>
            </div>
          </div>
            <div class="row form-group col-lg-8 col-12 offset-lg-2">
              <%= f.label :レシピ画像, class: "col-lg-3 col-12" %>
              <%= f.attachment_field :recipe_image %>
            </div>
            <div class="row form-group col-lg-8 col-12 offset-lg-2">
              <%= f.label :レシピ名, class: "col-lg-3 col-12" %>
              <%= f.text_field :name, placeholder:"レシピ名", class: 'col-lg-8 col-12 form-control' %>
            </div>
            <div class="row form-group col-lg-8 col-12 offset-lg-2">
              <%= f.label :レシピ説明, class: "col-lg-3 col-12" %>
              <%= f.text_field :work, placeholder:"レシピ説明", class: 'col-lg-8 col-12 form-control' %>
            </div>
            <div class="row form-group col-lg-8 col-12 offset-lg-2">
              <%= f.label :人分, class: "col-lg-3 col-12" %>
              <%= f.text_field :count, placeholder:"◯人分 (数字のみ記入)", class: 'col-lg-8 col-12 form-control' %>
            </div>
            <%= f.fields_for :materials do |m| %>
              <%= render "recipes/material_fields", f: m %>
            <% end %>
            <div class="col-lg-3 col-7 offset-lg-5 offset-2 my-4">
              <%= link_to_add_association "+フォームを追加", f, :materials, class: "btn btn-secondary btn-block" %>
            </div>
            <div class="row form-group col-lg-8 col-12 offset-lg-2">
              <%= f.label :作り方, class: "col-lg-3 col-12" %>
              <%= f.text_area :description, placeholder:"作り方の入力", class: 'col-lg-8 col-12 form-description' %>
            </div>
            <div class="form-group">
              <%= f.submit "レシピ更新", class: 'btn btn-outline-secondary col-lg-2 col-6 offset-lg-5 offset-3' %>
            </div>
        <% end %>
    </div>
  </div>
</div>