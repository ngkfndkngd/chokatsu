<div class="wrap">
  <div class='container-fluid'>
    <ul id="tab-menu">
      <li><a href="#tab1" class="active">マイページ</a></li>
      <li><a href="#tab2" class="">投稿レシピ</a></li>
    </ul>
      
    <div id="tab-contents">
      <div id="tab1" class="tab">
        <div class="row">
          <div class="col-2 mt-4 offset-2">
            <%= attachment_image_tag user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
          </div>
          <div class="col-5 offset-1 mt-4 mr-auto">
            <table class="table">
              <tr>
                <th>name</th>
                <th><%= user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <!--投稿レシピ-->
      <div id="tab2" class="tab">
        <div class="row-fluid">
          <div class="col-10 mt-4 offset-1">
            <div class="texts-wrapper">
              <div class="contents-title text-center">
                  <div class="d-flex flex-row flex-wrap">
                    <% userrecipes.each do |userrecipe|%>
                      <div class="d-flex flex-column mx-2 mt-3">
                        <%= link_to recipe_path(userrecipe), class:"link_recipe" do %>
                          <%= attachment_image_tag userrecipe, :recipe_image, :fill, 120, 120, format:'jpeg', fallback:"no_image.jpg" %>
                        <% end %>
                        <p class="name">
                          <%= link_to recipe_path(userrecipe), class:"text-dark" do %>
                            <span> <%= userrecipe.name %></span>
                          <% end %>
                        </p>
                      </div>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
