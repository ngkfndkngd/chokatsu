<div class='container'>
  <div class="row">
    <div class="col-12">
      <h2>マイページ編集</h2>
        <%= form_with model:@user, url:user_path, local:true do |f| %>
          <div class="col-12">
            <div class="form-group col-6">
              <label for="profile_image">Image</label>
              <%= f.attachment_field :profile_image %>
            </div>
            <div class="row form-group col-6">
              <label for="user_name">Name</label>
              <%= f.text_field :name, placeholder:"名前", class: 'col-6 form-control' %>
            </div>
            <div class="row form-group col-6">
              <label for="introduction">Introduction</label>
              <%= f.text_field :introduction, placeholder:"レシピ説明", class: 'col-6 form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "登録", class: 'btn btn_success btn-lg offset-5' %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>